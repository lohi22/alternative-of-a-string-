#include <iostream>
using namespace std;

int main() {
    int arr[] = {10, 20, 30, 40, 50, 60};
    int n = sizeof(arr) / sizeof(arr[0]);

    cout << "Alternate elements from the end: ";
    for (int i = n - 1; i >= 0; i -= 2) {
        cout << arr[i] << " ";
    }

    return 0;
}
   output : L K A



#include <iostream>
#include <string>
using namespace std;

int main() {
    string str = "LOHITHA";

    cout << "Characters at even indices are: ";
    for (int i = 0; i < str.length(); i += 2) {
        cout << str[i] << " ";
    }

    return 0;
}
output :
L H T A
